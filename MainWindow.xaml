            <Button x:Name="btnSnare16" Grid.Row="3" Grid.Column="20" Margin="3" Background="lightGray" Click="btnSnare_Click"></Button>

            <Label Name="lblKick" Content="Kick" Grid.Row="4" Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Label>
            <Button x:Name="btnKick1" Grid.Row="4" Grid.Column="2" Margin="3" Background="#A9A9A9" Click="btnKick_Click"></Button>
            <Button x:Name="btnKick2" Grid.Row="4" Grid.Column="3" Margin="3" Background="lightGray" Click="btnKick_Click"></Button>
            <Button x:Name="btnKick3" Grid.Row="4" Grid.Column="4" Margin="3" Background="lightGray" Click="btnKick_Click"></Button>
            <Button x:Name="btnKick4" Grid.Row="4" Grid.Column="5" Margin="3" Background="lightGray" Click="btnKick_Click"></Button>
            <Button x:Name="btnKick5" Grid.Row="4" Grid.Column="7" Margin="3" Background="#A9A9A9" Click="btnKick_Click"></Button>
            <Button x:Name="btnKick6" Grid.Row="4" Grid.Column="8" Margin="3" Background="lightGray" Click="btnKick_Click"></Button>
            <Button x:Name="btnKick7" Grid.Row="4" Grid.Column="9" Margin="3" Background="lightGray" Click="btnKick_Click"></Button>
            <Button x:Name="btnKick8" Grid.Row="4" Grid.Column="10" Margin="3" Background="lightGray" Click="btnKick_Click"></Button>
            <Button x:Name="btnKick9" Grid.Row="4" Grid.Column="12" Margin="3" Background="#A9A9A9" Click="btnKick_Click"></Button>
            <Button x:Name="btnKick10" Grid.Row="4" Grid.Column="13" Margin="3" Background="lightGray" Click="btnKick_Click"></Button>
            <Button x:Name="btnKick11" Grid.Row="4" Grid.Column="14" Margin="3" Background="lightGray" Click="btnKick_Click"></Button>
            <Button x:Name="btnKick12" Grid.Row="4" Grid.Column="15" Margin="3" Background="lightGray" Click="btnKick_Click"></Button>
            <Button x:Name="btnKick13" Grid.Row="4" Grid.Column="17" Margin="3" Background="#A9A9A9" Click="btnKick_Click"></Button>
            <Button x:Name="btnKick14" Grid.Row="4" Grid.Column="18" Margin="3" Background="lightGray" Click="btnKick_Click"></Button>
            <Button x:Name="btnKick15" Grid.Row="4" Grid.Column="19" Margin="3" Background="lightGray" Click="btnKick_Click"></Button>
            <Button x:Name="btnKick16" Grid.Row="4" Grid.Column="20" Margin="3" Background="lightGray" Click="btnKick_Click"></Button>
        </Grid>
    </Grid>
</Window>
