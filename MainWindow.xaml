            <Button x:Name="btnCrash9" Grid.Row="1" Grid.Column="12" Margin="3" Background="#A9A9A9" Click="btnCrash_Click"></Button>
            <Button x:Name="btnCrash10" Grid.Row="1" Grid.Column="13" Margin="3" Background="lightGray" Click="btnCrash_Click"></Button>
            <Button x:Name="btnCrash11" Grid.Row="1" Grid.Column="14" Margin="3" Background="lightGray" Click="btnCrash_Click"></Button>
            <Button x:Name="btnCrash12" Grid.Row="1" Grid.Column="15" Margin="3" Background="lightGray" Click="btnCrash_Click"></Button>
            <Button x:Name="btnCrash13" Grid.Row="1" Grid.Column="17" Margin="3" Background="#A9A9A9" Click="btnCrash_Click"></Button>
            <Button x:Name="btnCrash14" Grid.Row="1" Grid.Column="18" Margin="3" Background="lightGray" Click="btnCrash_Click"></Button>
            <Button x:Name="btnCrash15" Grid.Row="1" Grid.Column="19" Margin="3" Background="lightGray" Click="btnCrash_Click"></Button>
            <Button x:Name="btnCrash16" Grid.Row="1" Grid.Column="20" Margin="3" Background="lightGray" Click="btnCrash_Click"></Button>

            <Label Name="lblHihat" Content="Hi-Hat" Grid.Row="2" Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Label>
            <Button x:Name="btnHihat1" Grid.Row="2" Grid.Column="2" Margin="3" Background="#A9A9A9" Click="btnHihat_Click"></Button>
            <Button x:Name="btnHihat2" Grid.Row="2" Grid.Column="3" Margin="3" Background="lightGray" Click="btnHihat_Click"></Button>
            <Button x:Name="btnHihat3" Grid.Row="2" Grid.Column="4" Margin="3" Background="lightGray" Click="btnHihat_Click"></Button>
            <Button x:Name="btnHihat4" Grid.Row="2" Grid.Column="5" Margin="3" Background="lightGray" Click="btnHihat_Click"></Button>
            <Button x:Name="btnHihat5" Grid.Row="2" Grid.Column="7" Margin="3" Background="#A9A9A9" Click="btnHihat_Click"></Button>
            <Button x:Name="btnHihat6" Grid.Row="2" Grid.Column="8" Margin="3" Background="lightGray" Click="btnHihat_Click"></Button>
            <Button x:Name="btnHihat7" Grid.Row="2" Grid.Column="9" Margin="3" Background="lightGray" Click="btnHihat_Click"></Button>
            <Button x:Name="btnHihat8" Grid.Row="2" Grid.Column="10" Margin="3" Background="lightGray" Click="btnHihat_Click"></Button>
            <Button x:Name="btnHihat9" Grid.Row="2" Grid.Column="12" Margin="3" Background="#A9A9A9" Click="btnHihat_Click"></Button>
            <Button x:Name="btnHihat10" Grid.Row="2" Grid.Column="13" Margin="3" Background="lightGray" Click="btnHihat_Click"></Button>
            <Button x:Name="btnHihat11" Grid.Row="2" Grid.Column="14" Margin="3" Background="lightGray" Click="btnHihat_Click"></Button>
            <Button x:Name="btnHihat12" Grid.Row="2" Grid.Column="15" Margin="3" Background="lightGray" Click="btnHihat_Click"></Button>
            <Button x:Name="btnHihat13" Grid.Row="2" Grid.Column="17" Margin="3" Background="#A9A9A9" Click="btnHihat_Click"></Button>
            <Button x:Name="btnHihat14" Grid.Row="2" Grid.Column="18" Margin="3" Background="lightGray" Click="btnHihat_Click"></Button>
            <Button x:Name="btnHihat15" Grid.Row="2" Grid.Column="19" Margin="3" Background="lightGray" Click="btnHihat_Click"></Button>
            <Button x:Name="btnHihat16" Grid.Row="2" Grid.Column="20" Margin="3" Background="lightGray" Click="btnHihat_Click"></Button>

            <Label Name="lblSnare" Content="Snare" Grid.Row="3" Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Label>
            <Button x:Name="btnSnare1" Grid.Row="3" Grid.Column="2" Margin="3" Background="#A9A9A9" Click="btnSnare_Click"></Button>
            <Button x:Name="btnSnare2" Grid.Row="3" Grid.Column="3" Margin="3" Background="lightGray" Click="btnSnare_Click"></Button>
            <Button x:Name="btnSnare3" Grid.Row="3" Grid.Column="4" Margin="3" Background="lightGray" Click="btnSnare_Click"></Button>
            <Button x:Name="btnSnare4" Grid.Row="3" Grid.Column="5" Margin="3" Background="lightGray" Click="btnSnare_Click"></Button>
            <Button x:Name="btnSnare5" Grid.Row="3" Grid.Column="7" Margin="3" Background="#A9A9A9" Click="btnSnare_Click"></Button>
            <Button x:Name="btnSnare6" Grid.Row="3" Grid.Column="8" Margin="3" Background="lightGray" Click="btnSnare_Click"></Button>
            <Button x:Name="btnSnare7" Grid.Row="3" Grid.Column="9" Margin="3" Background="lightGray" Click="btnSnare_Click"></Button>
            <Button x:Name="btnSnare8" Grid.Row="3" Grid.Column="10" Margin="3" Background="lightGray" Click="btnSnare_Click"></Button>
            <Button x:Name="btnSnare9" Grid.Row="3" Grid.Column="12" Margin="3" Background="#A9A9A9" Click="btnSnare_Click"></Button>
            <Button x:Name="btnSnare10" Grid.Row="3" Grid.Column="13" Margin="3" Background="lightGray" Click="btnSnare_Click"></Button>
            <Button x:Name="btnSnare11" Grid.Row="3" Grid.Column="14" Margin="3" Background="lightGray" Click="btnSnare_Click"></Button>
            <Button x:Name="btnSnare12" Grid.Row="3" Grid.Column="15" Margin="3" Background="lightGray" Click="btnSnare_Click"></Button>
            <Button x:Name="btnSnare13" Grid.Row="3" Grid.Column="17" Margin="3" Background="#A9A9A9" Click="btnSnare_Click"></Button>
            <Button x:Name="btnSnare14" Grid.Row="3" Grid.Column="18" Margin="3" Background="lightGray" Click="btnSnare_Click"></Button>
